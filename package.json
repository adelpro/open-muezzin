{
  "name": "open-muezzin",
  "displayName": "Open Muezzin",
  "version": "0.0.1",
  "description": "Open-Muezzin is an open-source platform and extension that provides accurate prayer times and location-based Athan notifications, with no tracking, no ads, and universal support for most browsers.",
  "author": "Adelpro <contact@adelpro.us.kg>",
  "type": "module",
  "plasmo": {
    "manifest": {
      "name": "Open Muezzin",
      "description": "Universal browser adhan extension using OpenAdhan core with auto location and customizable Adhan audio.",
      "permissions": [
        "alarms",
        "storage",
        "geolocation",
        "notifications"
      ]
    }
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "adhan": "^4.4.3",
    "lucide-react": "^0.552.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.16",
    "@types/chrome": "0.0.258",
    "@types/node": "22.8.1",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^4.1.16",
    "typescript": "5.6.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ]
  }
}
